### /etc/bareos/bareos-dir.d/pool.conf
#
# Bareos director pool configuration file
#
# managed by Puppet, local changes will be overwritten
#

### Default pool definition ###
Pool {
  Name = Full
  Pool Type = Backup
  Recycle = yes
  AutoPrune = yes
  Volume Retention = 70 days
  Maximum Volume Bytes = 50G
  Maximum Volumes = 250
  Label Format = "Full-"
}

Pool {
  Name = Differential
  Pool Type = Backup
  Recycle = yes
  AutoPrune = yes
  Volume Retention = 50 days
  Maximum Volume Bytes = 10G
  Maximum Volumes = 250
  Label Format = "Differential-"
}

Pool {
  Name = Incremental
  Pool Type = Backup
  Recycle = yes
  AutoPrune = yes
  Volume Retention = 30 days
  Maximum Volume Bytes = 1G
  Maximum Volumes = 250
  Label Format = "Incremental-"
}

Pool {
  Name = Scratch
  Pool Type = Backup
}
