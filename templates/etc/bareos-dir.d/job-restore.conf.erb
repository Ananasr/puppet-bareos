### /etc/bareos/bareos-dir.d/job-restore.conf
#
# Bareos director job definitions for restore
#
# managed by Puppet, local changes will be overwritten
#

### Job Definition ###
Job {
  Name = "RestoreFiles"
  Type = Restore
  Client = Client-<%= @fqdn %>
  FileSet = "UnixServerComplete"
  Storage = File
  Pool = Incremental
  Messages = Standard
  Where = /srv/bareos/restores
}
