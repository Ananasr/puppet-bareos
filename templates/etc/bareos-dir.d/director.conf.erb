### /etc/bareos/bareos-dir.d/director.conf
#
# Bareos director configuration file
#
# managed by Puppet, local changes will be overwritten
#

### Director definition ###
Director {
  Name = BackupServerDirector
  QueryFile = "/usr/lib/bareos/scripts/query.sql"
  Maximum Concurrent Jobs = 10
  Password = <%= scope.lookupvar('bareos::client_password') %>
  Messages = Daemon
  Auditing = yes
  DirAddress = <%= @fqdn %>
  # Backend Directory = /usr/lib64/bareos/backends
  # Plugin Directory = /usr/lib64/bareos/plugins
  # Plugin Names = ""
}
