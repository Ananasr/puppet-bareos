### /etc/bareos/bareos-dir.d/catalog.conf
#
# Bareos director catalog configuration file
#
# managed by Puppet, local changes will be overwritten
#

### Generic catalog ###
Catalog {
  Name = MyCatalog
  dbdriver = "mysql"
  dbname = "bareos"
  dbuser = "bareos"
  dbpassword = "<%= scope.lookupvar('bareos::db_password') %>"
  DB Address = localhost
}
